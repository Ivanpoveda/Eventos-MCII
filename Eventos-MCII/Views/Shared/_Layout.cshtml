<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - Event Hall Management</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Eventos_MCII.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- ===== NAVBAR ===== -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-calendar-event"></i> EVENT HALL
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-bar-chart-line"></i> Dashboard
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SolicitudesSoporte" asp-action="Index">
                                <i class="bi bi-list-check"></i> Solicitudes
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="SolicitudesSoporte" asp-action="Create">
                                <i class="bi bi-plus-circle"></i> Nueva Solicitud
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Participantes" asp-action="Index">
                                <i class="bi bi-people"></i> Participantes
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Participantes" asp-action="Create">
                                <i class="bi bi-person-plus"></i> Nuevo Participante
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                    <i class="bi bi-gear"></i> Administración
                                </a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock"></i> Privacidad
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ===== CONTENT ===== -->
    <div class="container">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="text-center">
        <div class="container">
            &copy; 2025 - Event Hall Management |
            <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


