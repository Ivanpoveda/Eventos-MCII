@model BDEVENTOS.Models.SolicitudSoporte

<h2>Eliminar Solicitud</h2>

<div class="alert alert-danger">
    ¿Estás seguro que deseas eliminar esta solicitud?
</div>

<dl class="row">
    <dt class="col-sm-2">Evento</dt>
    <dd class="col-sm-10">@Model.Evento</dd>

    <dt class="col-sm-2">Tipo de Equipo</dt>
    <dd class="col-sm-10">@Model.TipoEquipo</dd>

    <dt class="col-sm-2">Prioridad</dt>
    <dd class="col-sm-10">@Model.Prioridad</dd>

    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>